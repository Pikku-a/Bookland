<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dhaval.bookland">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ui.components.main.BooklandApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bookland">
        <activity
            android:name=".ui.components.details.BookDetailsActivity"
            android:exported="true"
            android:label="@string/title_activity_book_details"
            android:theme="@style/Theme.Bookland.NoActionBar" />
        <activity
            android:name=".ui.components.search.SearchActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/title_activity_search"
            android:windowSoftInputMode="stateVisible"
            android:theme="@style/Theme.Bookland.Fullscreen" />
        <activity
            android:name=".ui.components.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Bookland.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>